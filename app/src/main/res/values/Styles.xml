<resources>

    <!-- Define your styles -->
    <style name="bookTitle">
<!--        <item name="android:layout_width">match_parent</item>-->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="bookData">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="btnAddOrDelete">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#A66B57</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="layoutPick">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
<!--        <item name="android:layout_margin">10dp</item>-->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">5dp</item>

    </style>

    <style name="layoutBookDetails">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
<!--        <item name="android:background">#3F51B5</item>-->
    </style>
    <style name="splitter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">#A66B57</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="layoutMyBook">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginVertical">5dp</item>
<!--        <item name="android:background">#588518</item>-->
    </style>
    <style name="layoutTitleDeadline">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
        <item name="android:orientation">vertical</item>
<!--        <item name="android:background">#851818</item>-->
    </style>
    <style name="progressBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:progress">0</item>
    </style>
    <style name="layoutEditProgress">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
<!--        <item name="android:background">#FFFFFF</item>-->
    </style>
    <style name="btnIncrementDecrementProgress">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/buttonBackgroundColor</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
</resources>
